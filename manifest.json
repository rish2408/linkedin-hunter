{
  "manifest_version": 3,
  "name": "LinkedIn Hunter",
  "version": "1.0",
  "description": "Fetch LinkedIn profile info using Hunter.io API",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ]
}
